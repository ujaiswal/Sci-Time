<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customisations available in newer API levels can go in
            res/values-vXX/styles.xml, while customisations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/CustomTheme">
        <!-- All customisations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Custom theme -->
    <style name="CustomTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
    </style>
    
</resources>